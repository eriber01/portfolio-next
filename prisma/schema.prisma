generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model profile {
  id           Int      @id @default(autoincrement())
  name         String
  job          String
  phone        String
  email        String
  git_url      String
  linkedin_url String
  linkedin     String
  cv           String
  year         Int
  pass         String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

model techs {
  id            Int             @id @default(autoincrement())
  name          String
  description   String
  image         String
  show_type     Int
  tech_projects tech_projects[]
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt
}

model projects {
  id          Int             @id @default(autoincrement())
  name        String
  description String
  image       String
  link        String
  git         String
  techs       tech_projects[]
  created_at  DateTime        @default(now())
  updated_at  DateTime        @updatedAt
}

model tech_projects {
  id         Int      @id @default(autoincrement())
  tech_id    Int
  techs      techs    @relation(fields: [tech_id], references: [id])
  project_id Int
  projects   projects @relation(fields: [project_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
